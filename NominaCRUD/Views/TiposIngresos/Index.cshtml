@model IEnumerable<NominaCRUD.Models.TiposIngreso>

@{
    ViewData["Title"] = "Index";
}

<h1>Tipos ingreso</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoIngresoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TipoIngresoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoIngresoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
